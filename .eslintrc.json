{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "warnOnUnsupportedTypeScriptVersion": false
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "root": true,
  "rules": {
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "eol-last": ["error", "always"],
    "no-trailing-spaces": ["error"]
  }
}